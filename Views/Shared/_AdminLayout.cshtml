@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #111;
            color: #fff;
        }

        #cosmic-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: radial-gradient(circle at center, #3c3f6e, #1f1f3a);
            z-index: -1;
        }

        .nebula {
            position: absolute;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, var(--nebula-color), transparent 70%);
            filter: blur(100px);
            animation: floatNebula 30s ease-in-out infinite alternate;
        }

        .admin-nav .nav-link {
            color: #ffcc00 !important;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .admin-nav .nav-link:hover {
                color: #fff !important;
                text-shadow: 0 0 8px #ffcc00;
            }

        .footer {
            background-color: #222;
            color: #ccc;
        }
    </style>
</head>
<body>
    <div id="cosmic-background">
        <div class="nebula" style="top:10%; left:20%; --nebula-color: #ff00cc;"></div>
        <div class="nebula" style="top:50%; left:60%; --nebula-color: #00ffff;"></div>
        <div class="nebula" style="top:80%; left:30%; --nebula-color: #ffcc00;"></div>
        <div class="nebula" style="top:30%; left:80%; --nebula-color: #00ff99;"></div>
    </div>

    <header>
        <nav class="navbar navbar-dark bg-dark px-4">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">🛠 Admin Panel</a>
                <ul class="navbar-nav flex-row gap-3 admin-nav">
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Index">📦 Quản lý đơn hàng</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Monan">📋 Danh sách món ăn</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="DiscountCodes">🎁 Mã giảm giá</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="ListUser">👥 Quản lý người dùng</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Stats">📊 Thống kê</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Settings">📦 Cài đặt</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Backup">💾 Quản lý Backup</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Content">📝 Quản lý nội dung</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Alerts">🚨 Cảnh báo hệ thống</a></li>
                    <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Media">🖼️ Quản lý Media</a></li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">🚪 Đăng xuất</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 mt-5 text-center">
        &copy; 2025 - Admin Panel - Đặt Là Có Ăn là Ghiền
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
