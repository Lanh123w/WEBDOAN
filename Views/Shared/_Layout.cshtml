@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using WEBDOAN.Models


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @await Component.InvokeAsync("SiteSetting")</title>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />


    <style>
        :root {
            --nebula-color: #00ffff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #111;
            color: #fff;
        }

        /* 🌌 Cosmic Background */
        #cosmic-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background: radial-gradient(circle at center, #3c3f6e, #1f1f3a);
            z-index: -1;
            pointer-events: none;
        }

        .nebula {
            position: absolute;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, var(--nebula-color), transparent 70%);
            filter: blur(100px);
            animation: floatNebula 30s ease-in-out infinite alternate;
        }

      

        /* 🌐 Navbar */
        .nav-scroll-container {
            overflow-x: auto;
            white-space: nowrap;
            max-width: 100%;
            padding-bottom: 5px;
            scroll-behavior: smooth;
            cursor: default;
            pointer-events: auto;
        }


            .nav-scroll-container::-webkit-scrollbar {
                height: 6px;
            }

            .nav-scroll-container::-webkit-scrollbar-thumb {
                background-color: #00ffff;
                border-radius: 3px;
            }

        .navbar-nav .nav-link {
            display: inline-block;
            padding: 0.5rem 1rem;
            color: rgba(0,255,255,0.7) !important;
            font-weight: 600;
            transition: transform 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #00ffff !important;
                transform: translateX(5px);
                text-shadow: 0 0 8px rgba(0,255,255,0.6);
            }

        .btn-outline-danger {
            border-color: #ff4d4d;
            color: #ff4d4d;
        }

            .btn-outline-danger:hover {
                background-color: #ff4d4d;
                color: #fff;
            }

        .footer {
            background-color: #222;
            color: #ccc;
        }

        .toast {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div id="cosmic-background">
        <div class="nebula" style="top:10%; left:20%; --nebula-color: #ff00cc;"></div>
        <div class="nebula" style="top:50%; left:60%; --nebula-color: #00ffff;"></div>
        <div class="nebula" style="top:80%; left:30%; --nebula-color: #ffcc00;"></div>
        <div class="nebula" style="top:30%; left:80%; --nebula-color: #00ff99;"></div>
    </div>

    <header>
        <nav class="navbar navbar-dark bg-dark px-4">
            <div class="container-fluid d-flex flex-wrap align-items-center justify-content-between">
              
                <div class="nav-scroll-container">
                    <ul class="navbar-nav flex-row gap-3">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="FoodItems" asp-action="Categories">🍽 Món ăn</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">🛒 Giỏ hàng</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="MyOrder">📦 Đơn hàng</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="MapTest" asp-action="MapTest">🗺️ Bản đồ</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var roles = await UserManager.GetRolesAsync(currentUser);
                            if (roles.Contains("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link text-warning" asp-controller="AdminOrder" asp-action="Admin">Admin</a></li>

                            }
                            <li class="nav-item"><span class="nav-link text-success">👤 @currentUser.UserName</span></li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">🚪 Đăng xuất</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">🔐 Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">📝 Đăng ký</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
     

    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 mt-5">
       
        <div class="container text-end">
            <div id="onlineStats">
                @await Component.InvokeAsync("UserStats")
            </div>
        </div>
        <div class="text-center mt-3">
            
            <div class="container">
                @await Component.InvokeAsync("SiteSetting")

            </div>

        </div>

    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    
  
@await RenderSectionAsync("Scripts", required: false)

    <script>
        const scrollContainer = document.querySelector('.nav-scroll-container');
        let scrollSpeed = 0;
        let isHovering = false;

        scrollContainer.addEventListener('mouseenter', () => {
            isHovering = true;
        });

        scrollContainer.addEventListener('mouseleave', () => {
            isHovering = false;
            scrollSpeed = 0;
        });

        scrollContainer.addEventListener('mousemove', (e) => {
            const rect = scrollContainer.getBoundingClientRect();
            const mouseX = e.clientX - rect.left;
            const center = rect.width / 2;

            scrollSpeed = (mouseX - center) * 22 * Math.abs(mouseX - center) / center;
            scrollSpeed = Math.max(Math.min(scrollSpeed, 50), -50); // Giới hạn tốc độ
        });

        function autoScroll() {
            if (isHovering && scrollSpeed !== 0) {
                scrollContainer.scrollLeft += scrollSpeed;
            }
            requestAnimationFrame(autoScroll);
        }

        autoScroll();
    </script>


</body>
</html>