@using WEBDOAN.Models

@model IEnumerable<Category>
@{
    ViewData["Title"] = "Danh mục món ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="category-section">
    <h2 class="section-title">📂 Danh mục món ăn</h2>
    <div class="category-grid">
        @foreach (var category in Model)
        {
            <a asp-action="ItemsByCategory" asp-route-id="@category.Id" class="category-card">
                <div class="category-icon">🍽</div>
                <div class="category-name">@category.Name</div>
            </a>
        }
    </div>
    <div class="text-end mt-4">
        <a class="btn btn-view-all" asp-controller="FoodItems" asp-action="AllItems">👀 Hiện tất cả món ăn</a>
    </div>
</div>
<style>
    body {
        background: linear-gradient(135deg, #blue, #465763);
        font-family: 'Quicksand', sans-serif;
        color: #333;
    }

    .category-section {
        padding: 40px;
        background-color: azure;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.1);
        max-width: 1000px;
        margin: auto;
    }

    .section-title {
        font-size: 32px;
        font-weight: 800;
        color: #0d6efd;
        text-align: center;
        margin-bottom: 40px;
        background: linear-gradient(to right, #0d6efd, #00c6ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }

    .category-card {
        background: #3f5580;
        border: 2px solid #0d6efd;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        color: #0d6efd;
        font-weight: 600;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 18px rgba(13, 110, 253, 0.3);
        background-color: gray;
    }


    .category-icon {
        font-size: 35px;
        margin-bottom: 10px;
    }

    .category-name {
        font-size: 18px;
        font-weight: 600;
    }

    .btn-view-all {
        background-color: #0d6efd;
        color: wheat;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
        transition: background-color 0.3s ease;
    }

        .btn-view-all:hover {
            background-color: #0b5ed7;
        }

    .category-card {
        background: linear-gradient(135deg, var(--nebula-1), var(--nebula-2));
        box-shadow: 0 4px 12px var(--nebula-3);
    }

        .category-card:hover {
            background: linear-gradient(135deg, var(--nebula-2), var(--nebula-5));
            box-shadow: 0 6px 18px var(--nebula-3);
        }


       
</style>
