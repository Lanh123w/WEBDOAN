@using WEBDOAN.Models
@model Category

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Message"]
    </div>
}

<h2 class="section-title text-center mb-4">üßÜ M√≥n ƒÉn thu·ªôc danh m·ª•c: <strong>@Model.Name</strong></h2>

<div class="row">
    @foreach (var item in Model.FoodItems)
    {
        var remaining = item.TotalQuantity - item.QuantitySold;

        <div class="col-md-4 mb-4">
            <div class="card h-100 food-card @(remaining == 0 || !item.IsActive ? "opacity-75" : "")">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />

                <div class="card-body text-center">
                    <h5 class="card-title @(remaining == 0 || !item.IsActive ? "text-muted" : "")">@item.Name</h5>

                    <span class="badge @(remaining > 0 ? "bg-success" : "bg-secondary") mb-2">
