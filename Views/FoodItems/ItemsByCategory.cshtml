                    </span>

                    <p class="card-text @(remaining == 0 || !item.IsActive ? "text-muted" : "")">@item.Description</p>
                    <p class="card-text @(remaining == 0 || !item.IsActive ? "text-muted" : "text-success fw-bold")">@item.Price.ToString("N0") ‚Ç´</p>

                    <img id="food-img-@item.Id" src="@item.ImageUrl" class="img-thumbnail mb-2" />

                    @if (item.IsActive && remaining > 0)
                    {
                        <form method="post" asp-controller="Cart" asp-action="AddToCart" onsubmit="playTing()">
                            <input type="hidden" name="foodItemId" value="@item.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button onclick="flyToCart('#food-img-@item.Id', '.nav-link[href*=Cart]')" class="btn btn-success">üõí Th√™m v√†o gi·ªè</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center mt-2">
                            ‚õî M√≥n ƒÉn n√†y hi·ªán ƒëang <strong>t·∫°m h·∫øt</strong>. Vui l√≤ng ch·ªçn m√≥n kh√°c nh√©!
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- üéµ √Çm thanh ting -->
<audio id="ting-audio" src="~/audio/ting.mp3" preload="auto"></audio>

<!-- üé® Hi·ªáu ·ª©ng CSS -->
<style>
    .food-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .food-card:hover {
        transform: scale(1.05);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        z-index: 2;
    }

    .card-img-top {
        object-fit: cover;
        height: 200px;
    }

    .btn-success {
        background-color: #198754;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .btn-success:hover {
        background-color: #157347;
    }

    .opacity-75 {
        opacity: 0.75;
    }

    .alert-warning {
        font-size: 14px;
        padding: 8px;
    }

    .badge {
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 12px;
        display: inline-block;
    }

    .section-title {
        font-size: 24px;
        font-weight: bold;
    }
</style>

<!-- üîä JavaScript ph√°t √¢m thanh -->
<script>
    function playTing() {
        const audio = document.getElementById("ting-audio");
        if (audio) {
            audio.play();
        }
    }
</script>
